@model MVC_Library.Models.Entity.TblBook

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Book Name</label>
        <input type="text" class="form-control" name="bookName" />
    </div>
    <div>
        <label>Category</label>
        @Html.DropDownListFor(m => m.TblCategory.categoryId, (List<SelectListItem>)ViewBag.ctg, new { @class = "form-control" })
    </div>
    <div>
        <label>Author</label>
        @Html.DropDownListFor(m => m.TblAuthor.authorId, (List<SelectListItem>)ViewBag.ath, new { @class = "form-control" })
    </div>
    <div>
        <label>Relase Date</label>
        <input type="text" class="form-control" name="bookRelase" />
    </div>
    <div>
        <label>Publisher</label>
        <input type="text" class="form-control" name="bookPublisher" />
    </div>
    <div>
        <label>Pages</label>
        <input type="text" class="form-control" name="bookPages" />
    </div>
    <div>
        <label>Status</label>
        <input type="text" class="form-control" name="bookStatus" />
    </div>
    <div style="margin-top:10px">
        <button class="btn btn-success">SAVE</button>
    </div>
</form>
