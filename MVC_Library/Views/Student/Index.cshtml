@model MVC_Library.Models.Entity.TblMember
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

@using (Html.BeginForm("Index2", "Student", FormMethod.Post))
{
    <table class="table table-bordered" style="margin-top:15px">
        <tr style="background-color:rgb(252, 178, 22)">
            <td>
                <label style="font-weight:bolder">Mail</label>
                @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr style="background-color:rgb(252, 178, 22)">
            <td>
                @Html.TextBoxFor(x => x.memberName, new { @class = "from-control" })
            </td>
        </tr>
        <tr style="background-color:rgb(252, 178, 22)">
            <td>
                @Html.TextBoxFor(x => x.memberSurname, new { @class = "from-control" })
            </td>
        </tr>
        <tr style="background-color:rgb(252, 178, 22)">
            <td>
                @Html.TextBoxFor(x => x.memberPhone, new { @class = "from-control" })
            </td>
        </tr>
        <tr style="background-color:rgb(252, 178, 22)">
            <td>
                @Html.TextBoxFor(x => x.memberUsername, new { @class = "from-control" })
            </td>
        </tr>
        <tr style="background-color:rgb(252, 178, 22)">
            <td>
                @Html.TextBoxFor(x => x.memberPassword, new { @class = "from-control" })
            </td>
        </tr>
        <tr style="background-color:rgb(252, 178, 22)">
            <td>
                @Html.TextBoxFor(x => x.memberSchool, new { @class = "from-control" })
            </td>
        </tr>
        <tr style="background-color:rgb(252, 178, 22)">
            <td>
                @Html.TextBoxFor(x => x.memberPhoto, new { @class = "from-control" })
            </td>
        </tr>
        <tr style="background-color:rgb(252, 178, 22)">
            <td>
                <button class="btn btn-danger font-weight-bolder">Password Update</button>
            </td>
        </tr>
    </table>
}